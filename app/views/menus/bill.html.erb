<div id="menus_bill">
  <h2 id="page_title">Order</h2>
  <% if @restaurant.present? %>
  <div class="row">
    <div class="col s12 offset-m3 m6 l6 offset-l3">
      <%= image_tag @restaurant.filepicker_url %>
    </div>
  </div>
  <% end %>
  <table class="dbd_table">
    <thead>
      <tr>
        <td>姓名</td>
        <td>菜名</td>
        <td>價格</td>
        <td>備註</td>
        <td>是否結清</td>
        <td></td>
      </tr>
    </thead>
    <tbody>
    <% @menu.orders.each do|order| %>
      <tr>
        <td data-userName="<%= order.user.username %>"><%= order.user.username %></td>
        <td data-foodName="<%= order.food_name %>"><%= order.food_name %></td>
        <td data-price="<%= order.price %>"><%= order.price %></td>
        <td data-note="<%= order.note %>">
          <%= order.note %>
        </td>
        <%  if order.has_paid?(order) %>
        <td data-status="<%= order.has_paid %>">已經繳費</td>
        <% else %>
        <td data-status="<%= order.has_paid %>">尚未繳費</td>
        <% end %>
        <td>
          <% if !order.has_paid && (can? :close, order) %>
            <%= link_to "已付款", close_menu_order_path(@menu, order), method: :patch %>
          <% end %>
          <% if can? :destroy, order %>
          <%= link_to menu_order_path(@menu, order), method: :delete, class:"delete_option" do %>
          <span class="dbd_icon--selected dbd_icon-remove"></span>
          <span>刪除</span>
          <% end %>
          <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>