<div id="menus_new">
  <h2 id="page_title">發起訂餐</h2>
  <div class="row">
    <!-- todo 加入餐廳資訊 -->
    <%= form_for @menu, :url => {:controller => 'menus', :action => 'create' } do |f| %>
    <div class="col s12 m6 offset-m3 l5">
      <div class="row">
        <div id="restaurant_select" class="dbd_input_field">
          <%= fa_icon "sort", id: "drop_arrow" %>
          <%= f.label :restaurant_id, "餐廳名稱" %>
          <%= f.collection_select(:restaurant_id, Restaurant.all, :id, :name) %>
        </div>

        <!-- todo reactive 加入菜單圖片 -->
        <div id="residual_time" class="clearfix dbd_input_field">
          <%= f.label :duration, "開放時間" %>
          <%= f.text_field :duration, placeholder: "單位(分)" %>
          <br>
        </div>
      </div>
      <%= f.submit "送出", class: "dbd_button", :method => 'POST'  %>
    </div>
    <div class="col s12 m6 l7">
      <div class="card">
        <div class="card-image">
          <img id="restaurant_image" src="">
          <span style="color: #444;" class="card-title" id="restaurant_name"></span>
        </div>
        <div class="card-content">
          <p id="intro"></p>
        </div>
        <div  class="card-action center">
          <a style="color:#855656 " id="restaurant_link" target="_blank" href="">連結</a>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>

<%= content_for :javascripts %>
<%= javascript_include_tag 'bundle/order_new_bundle.js' %>
<script>
$(document).ready(function() {
$('select').material_select();
});
</script>