<%= form_for ([@menu,@menu.orders.build]) do |f| %>
	<%= f.label :name, '名稱' %>
	<%= f.text_field :name %>
	<%= f.label :food_name, '菜名' %>
	<%= f.text_field :food_name %>
	<%= f.label :price, '價格' %>
	<%= f.text_field :price %>
	<%= f.label :has_paid, '是否結清' %>
	
	<%= f.submit '送出', class: "btn",id: "order_button"  %>
	
<% end %>