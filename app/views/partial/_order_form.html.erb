	<%= f.label :name, '名稱' %>
    <% if current_user.present? %>
	<%= f.text_field :name, value:  current_user.username%>
    <% else %>
    <%= f.text_field :name %>
    <% end %>
	<%= f.label :food_name, '菜名' %>
	<%= f.text_field :food_name %>
	<%= f.label :price, '價格' %>
	<%= f.text_field :price %>
    <%= f.label :note, '備註' %>
    <%= f.text_field :note %>
	<br>
	<%= f.submit '送出', class: "dbd_button",id: "order_button"  %>
	
<% end %>

