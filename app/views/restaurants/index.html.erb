<div id="restaurants_index">
  <div class="row center">
    <a class="dbd_button" href="<%= new_restaurant_path %>"><i class="dbd_icon-restaurant"></i>新增餐廳</a>
  </div>
  <div class="row">
    <% @restaurants.each do |rest| %>
    <div class="col s12 m6 l4">
      <%= link_to restaurant_path(rest) do %>
      <div class="restaurant_card center">
        <h6 class="card_title"><%= rest.name %></h6>
        <h6 class="phone"><%= rest.phone %></h6>
        <div class="rank_area" data-rank="<%= rest.rank %>">
          
        </div>
        
        <div class="card_action">
          <%= link_to edit_restaurant_path(rest) do%>
          <span class="dbd_icon-pencil"></span>
          <% end %>
          <%= link_to restaurant_path(rest), method: :delete, data: {confirm: "請確認是否真的要刪除餐廳，一旦刪除就回不來了喔！"} do %>
          <span class="dbd_icon--selected dbd_icon-remove"></span>
          <% end %>
        </div>
        
      </div>
      <% end %>
      <div class="modal" id="<%= rest.id %>">
        <div class="modal-content">
          <img style="max-width:100%; max-height:50%;" src="<%= rest.filepicker_url %>" alt="">
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
<%= content_for :javascripts do %>
<%= javascript_include_tag 'bundle/restaurants_index_bundle'%>
<% end %>